<% unless user_signed_in? %>
    <h1 class="welcome">WELCOME TO SOCIFY</h1>
<% end %>
<div class="landing-page--wrapper">
  <div class=" row landing-page"></div>
</div>
<% if user_signed_in? %>
    <%= form_for(@post) do |f| %>
      <div class="form-group" style=" max-width: 50%">
        <%= f.label 'Post something' %><br>
        <%= f.text_area :content, class: 'form-control', autofocus: true,
                        placeholder: 'What\'s up?' %>
        <%= f.file_field :attachment, class: 'form-control' %>
      </div>
      <%= f.submit :post, class: 'btn btn-primary'%>
  <% end %>
  <h2>My Posts</h2>
  <% @posts.each do |post| %><div class="container">
  <div class="panel panel-default">
    <div class="panel-body">
      <span><%= "#{post.user.first_name} posted on #{post.created_at.strftime('%a, %-d %b')}"%></span>
      <p ><%= post.content %></p>
      <% if post.attachment.present? %>
        <div>
          <%= post.attachment%>
        </div>
      <% end %>

    </div>
  </div>
</div>
  <% end %>

<% end %>